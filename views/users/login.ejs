<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mt-3">Login for WanderLust</h1>
    <div class="col-6 offset-3 ">
        <form action="/login" method="post" class="needs-validation mt-3" novalidate>
            <div class="mb-3">
            <lable for="username" class="form-label">Username</lable>
            <input type="text" name="username" class="form-control" id="username" required>
            <div class="valid-feedback"> Looks good!</div>
            </div>
            
            <div class="mb-3">
            <lable for="password" class="form-label">Password</lable>
            <input type="password" name="password" class="form-control" id="password" required>
            </div>
            <button class="btn btn-success">Login </button>

        </form>
    </div>
</div>